{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "composite": true,
    "include": [
      "src"
    ],
    "paths": {
      "@pages/*": [
        "./src/pages/*"
      ],
      "@api/*": [
        "./src/api/*"
      ],
      "@stores/*": [
        "./src/stores/*"
      ]
    }
  }
}
